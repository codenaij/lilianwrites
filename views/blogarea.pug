    title Lilian Writes

  body
    mixin navItem(link, text, icon, active)
      li(class=`${active ? 'side-nav--active' : ''}`)
        a(href=`${link}`)
          svg
            use(xlink:href=`images/icons.svg#icon-${icon}`)
          | #{text}
    .wrapper#wrapper
      include _header
      main.main
        .user-view
          nav.user-view__menu
            ul.side-nav
              +navItem('/me', 'Settings', 'settings')
              //- +navItem('#', 'My bookings', 'briefcase')
              +navItem('#', 'My comments', 'star')

            - if (user.role === 'admin' || 'contributor')
              .admin-nav
                h5.admin-nav__heading Admin
                ul.side-nav
                  +navItem('#', 'Create Blog', 'book-open', true)
                  +navItem('/test', 'See Blogs', 'book')

          - if (user.role === 'admin' || 'contributor')
            .user-view__content
              .user-view__form-container
                h2.heading-secondary.ma-bt-md Create New Blog
                
                
                form.form.form-admin-blog
                  .form__group
                    label.form__label(for='title') Title
                    input#blogtitle.form__input(type='text', required, name='title')
                
                  .form__group
                    
                    
                  
                  .form__group
                    label.form__label(for='blog') Content
                    textarea#editor.form__input(name=blog, rows='10', cols='66')

                

                  .form__group
                    label.form__label(for='author') Author
                    input#blogauthor.form__input(type='text', value=`${user.name}`, required, name='author')
                  
                  //- .form__group.form__photo-upload
                  //-   input.form__upload(type='file', accept='image/*', name='photo', id='blogphoto')
                  //-   label(for='photo') Choose Photo for Blog

                  .form__group.form__photo-upload

                    input.form__upload(type='file', accept='image/*', id='photo', name='photo')
                    label(for='photo') Choose Blog photo
                    
                  .form__group.right
                    button.btn.btn--small.btn--green Post Blog
      
      include _footer

